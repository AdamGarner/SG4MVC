<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net6.0</TargetFrameworks>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<NoWarn>1701;1702;1591</NoWarn>
		<LangVersion>10</LangVersion>
	</PropertyGroup>

	<PropertyGroup>
		<PackageId>SG4Mvc</PackageId>
		<Authors>Mark Flanagan, Kevin Kuszyk, Scott Mackay, Artiom Chilaru</Authors>
		<PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
		<PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
		<PackageProjectUrl>https://github.com/T4MVC/R4MVC</PackageProjectUrl>
		<RepositoryUrl>https://github.com/T4MVC/R4MVC</RepositoryUrl>
		<Title>R4Mvc</Title>
		<Description>Runtime helpers used by code generated by SG4Mvc.Generator</Description>
		<PackageTags>aspnetcore mvc r4mvc</PackageTags>
		<VersionPrefix>1.0.0</VersionPrefix>
		<!-- Leaving the assembly version static, to prevent assembly binding and assembly redirect issues.
    Only the major version will ever be updated -->
		<AssemblyVersion>1.0.0.0</AssemblyVersion>
		<PackageReleaseNotes>
			+ R4MvcExclude attribute now supports actions
		</PackageReleaseNotes>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Release'">
		<IsPackable>true</IsPackable>
		<ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<DebugType>embedded</DebugType>
	</PropertyGroup>

	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
		<PackageReference Include="Microsoft.AspNetCore.Routing.Abstractions" Version="2.2.0" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\SG4Mvc.Generator\SG4Mvc.Generator.csproj" PrivateAssets="all" />
	</ItemGroup>

	<ItemGroup>
		<None Include="$(OutputPath)\net6.0\SG4Mvc.Generator.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
	</ItemGroup>

</Project>
